{
  "compilerOptions": {
    "declaration": true, // Generates corresponding '.d.ts' file.
    "declarationDir": "./dist", // Output directory for '.d.ts' files.
    "outDir": "./dist", // Output directory for the compiled JS files.
    // Other necessary compiler options:
    "module": "CommonJS",
    "target": "es6",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    // Include these lines if your package is meant to be used in a browser environment:
    "lib": ["dom", "es6"]
  },
  "include": ["src/**/*"], // Specify the directory to be included in the compilation.
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx", "src/stories/**/*", "**/*.stories.tsx"] // Exclude tests and node_modules from the compilation.
}
